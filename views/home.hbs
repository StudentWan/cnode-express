<div class="row clearfix">
    <div class="col-md-2 column">
        <ul class="nav nav-pills nav-stacked">
            <li class="active"><a href="#">全部</a></li>
            <li><a href="#">精华</a></li>
            <li><a href="#">分享</a></li>
            <li><a href="#">问答</a></li>
            <li><a href="#">招聘</a></li>
        </ul>
    </div>

    <div class="col-md-10 column">
        <div class="inner no-padding">
            <div id="topic_list">
                {{#each data}}
                <a class="user_avatar pull-left" href="#">
                    <img src={{author.avatar_url}} title="avatar1" />
                </a>
                <span class="reply_count pull-left">
                <span class="count_of_replies" title="回复数">&nbsp{{reply_count}}</span>
                <span class="count_seperator">/</span>
                <span class="count_of_visits" title='点击数'>{{visit_count}}</span>
                </span>
                <a class='last_time pull-right' href="#">
                    <span class="last_active_time">{{create_at}}</span>
                </a>
                <div class="topic_title_wrapper">
                    <a class='topic_title' href='#' title={{title}}>&nbsp{{title}}</a>
                </div>
                <hr> 
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-md-10 column pull-right">
        <ul class="pagination" current_page={{pagedata.current_page}}>
            <li style="display: {{pagedata.style1}}"><a>...</a></li>
            <li class={{pagedata.class1}}><a href={{pagedata.href1}}>{{pagedata.page1}}</a></li>
            <li class={{pagedata.class2}}><a href={{pagedata.href2}}>{{pagedata.page2}}</a></li>
            <li class={{pagedata.class3}}><a href={{pagedata.href3}}>{{pagedata.page3}}</a></li>
            <li class={{pagedata.class4}}><a href={{pagedata.href4}}>{{pagedata.page4}}</a></li>
            <li class={{pagedata.class5}}><a href={{pagedata.href5}}>{{pagedata.page5}}</a></li>
            <li style="display: {{pagedata.style2}}"><a>...</a></li>
        </ul>
    </div>
</div>