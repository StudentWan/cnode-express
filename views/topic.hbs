<div class="row clearfix">
    <div class="row clearfix">
        <div class="col-md-9 column">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="topic_full_title">
                             {{#if data.category}}
                            <span class="put_top_good">{{data.category}}</span> {{/if}} {{data.title}}
                        </span>
                        <div class="changes">
                            <span>
                            发布于{{data.create_at}}
                            </span>
                            <span>作者 <a href="#">{{data.author.loginname}}</a></span>
                            <span>{{data.visit_count}}次浏览</span>
                            <span> 来自 {{data.tab}}</span>
                    </h3>
                    </div>
                    <div class="panel-body">
                        {{{data.content}}}
                    </div>
                    {{#if user}}
                    <div class="panel-footer">
                       <a href="#reply">回复</a>
                        </div>
                        {{/if}}
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            回复数：{{data.reply_count}}
                        </h3>
                    </div>
                    <div class="panel-body">

                        {{#each data.replies}}
                        <p>
                            <a class="user_avatar pull-left" style="width:40px;" href="#">
<img src={{author.avatar_url}} title="avatar1" />
</a>
<span>{{author.loginname}}</span>
<a>
    <span class="last_active_time">{{create_at}}</span>
</a>
{{#if ../user}}
        <a onclick="document.getElementById('reply_id').value='{{id}}';"class="pull-right" href="#reply">回复</a>
{{/if}}
</p>
{{{content}}}
<hr> {{/each}}
</div>
</div>
{{#if user}}
<div id="reply" class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            编辑回复
        </h3>
    </div>
    <div class="panel-body">
        <form role="form" action="/reply" method="POST">
            <div class="form-group">
                <input hidden="hidden" id="topic_id" name="topic_id" value={{data.id}} />
                <input hidden="hidden" id="reply_id" name="reply_id" value=""/>
                <textarea class="form-control" rows="8" name="content"></textarea>
            </div>
            <button type="submit" class="btn btn-default">发表</button>
        </form>
    </div>
</div>
{{/if}}
</div>
<div class="col-md-3 column">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                作者
            </h3>
        </div>
        <div class="panel-body">
            <a class="user_avatar pull-left" style="width:40px;" href="#">
<img src={{data.author.avatar_url}} title="avatar1" />
</a>
{{data.author.loginname}}
</div>
</div>
</div>
</div>
</div>